<p id="notice"><%= notice %></p>

<h1>Listing Course Details</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Course description</th>
      <th>Course duration</th>
      <th>Lecture hours</th>
      <th>Course curriculum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_details.each do |course_detail| %>
      <tr>
        <td><%= course_detail.course_id %></td>
        <td><%= course_detail.course_description %></td>
        <td><%= course_detail.course_duration %></td>
        <td><%= course_detail.lecture_hours %></td>
        <td><%= course_detail.course_curriculum %></td>
        <td><%= link_to 'Show', course_detail %></td>
        <td><%= link_to 'Edit', edit_course_detail_path(course_detail) %></td>
        <td><%= link_to 'Destroy', course_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

