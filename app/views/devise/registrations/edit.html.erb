<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Edit Profile</h1>
                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Edit</a></li>

                    </ol>
                </nav>
                <div class="separator mb-5"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-4">
                <h5 class="mb-4">Edit</h5>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="mb-4">Edit details</h5>

                      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                        <div class="form-row">

                         <div class="form-group col-md-6">
                                <label >Fullname</label>

                                <%= f.input :first_name, :label => false, :required => true,:placeholder=>"FirstName", as: :string,input_html: { id:"", class: "form-control" }%>
                                <%= f.input :last_name, :label => false, :required => true,:placeholder=>"last_name", as: :string,input_html: { id:"", class: "form-control" }%>

                              

                            </div>

                              <div class="form-group col-md-6">
                                <label >Mobile Number</label>

                                <%= f.input :mobile_number, :label => false, :required => true,:placeholder=>"Mobile Number", as: :string,input_html: { id:"", class: "form-control" }%>

                              

                            </div>

                            <div class="form-group col-md-6">
                                <label >Email</label>

                                <%= f.input :email, :label => false, :required => true,:placeholder=>"Email", as: :string,input_html: { id:"", class: "form-control" }%>

                              

                            </div>

                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>


                            <div class="form-group col-md-6">
                                <label >New Password</label>

                                <%= f.input :password, :label => false, :required => false,:placeholder=>"New Password", hint: "leave it blank if you don't want to change it",input_html: { autocomplete: "new-password", class: "form-control" }%>

                            </div>


                             <div class="form-group col-md-6">
                                <label >Confirm Password</label>

                                <%= f.input :password_confirmation, :label => false, :required => false,:placeholder=>"New Password", input_html: { autocomplete: "new-password", class: "form-control" }%>

                            </div>



                                <div class="form-group col-md-6">
                                <label >Current Password</label>

                                <%= f.input :current_password, :label => false, :required => false,:placeholder=>"New Password", hint:  "we need your current password to confirm your changes",input_html: { autocomplete: "new-password", class: "form-control" }%>

                            </div>

                              <%= f.input :role_id, :as=> :hidden, input_html: {value: "1"}, class:"form-control" %>


                    
                        </div>
 

                        <%= f.button :submit,"Update", class: "btn btn-primary d-block mt-3", data: {"disable-with": "Updating......"} %>
                        <%= link_to "Back", :back,:style=>"color: #007bff !important" %>

                        <% end%>
                    </div>
                </div>


            </div>








        </div>



    </div>
</main>
