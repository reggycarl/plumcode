<div class="sign-in-1x">
<div class="container">
    <div class="form-container">
        <div class="row">
            <div class="col-md-6">
                <div class="sign-in-form">
                       
                            <h6 class="mb-4">Log In</h6>
<form>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">

    <div class="col-md-12">
        <div class="single-input">
           

            <div class="form-group">
            <%= f.input :email,
            required: false,
                        autofocus: true,
input_html: { class: "form-control"} %>
        </div>
    </div>

    <div class="col-md-12">
        <div class="single-input">
           

            <div class="form-group">
            <%= f.input :password,
            required: false,
                        autofocus: true,
input_html: { class: "form-control", autocomplete: "current-password"} %>
            </div>
        </div>
    </div>
    

    <div class="col-md-12">
        <div class="sign-in-btn sign-up-btn">

        <button
        class="btn btn-primary btn-lg btn-shadow" type="submit">LOGIN</button>

        </div>
    </div>
    <div class="col-md-12">
    <p>Donâ€™t have an account? <%= link_to "Create one here!", new_user_registration_path,:class=>"text-color-4",:style=>"color: #007bff !important" %>
    </p>  
    </div>
    <% end %>
</div>
</form>